{
  "name": "theo-data",
  "scripts": {
    "start": "bun run src/index.ts",
    "check": "bunx tsc --noEmit",
    "format": "bunx prettier --write drizzle.config.ts src/db/*.ts src/index.ts",
    "db:generate": "bunx drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "bunx drizzle-kit migrate --config drizzle.config.ts",
    "db:push": "bunx drizzle-kit push --config drizzle.config.ts",
    "drizzle:studio": "bunx drizzle-kit studio --config drizzle.config.ts"
  },
  "main": "src/index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.9",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.18.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
